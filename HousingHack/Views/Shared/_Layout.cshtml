@using HousingHack.Constants
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/Grid.css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/Content/")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    @Html.ActionImage("List", null, "~/Content/proshare.png", "Edit")
                    @*<p class="site-title">@Html.ActionLink("your logo here", "List", "Listing")</p>*@
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                            @if (AppContants.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("My Ventures", "MyVentures", "Venture", new { userId = AppContants.LoggedInUser.Id }, new { style = "color:#ddd ; margin: 1px 1px 1px 1px; padding: 3px 3px 3px 22px; border-radius: 4px;background: url('../Images/banknotes-16.png') no-repeat; background-size: 20px; background-position-y: 4px; border: 1px rgba(0, 0, 0, 0.28) solid;" })</li>
                                <li>@Html.ActionLink("My Investments", "MyInvestments", "Venture", new { userId = AppContants.LoggedInUser.Id }, new { style = "color:#ddd ; margin: 1px 1px 1px 1px; padding: 3px 3px 3px 22px; border-radius: 4px;background: url('../Images/coins-16.png') no-repeat; background-size: 20px; background-position-y: 4px; border: 1px rgba(0, 0, 0, 0.28) solid;" })</li>
                                <li>@Html.ActionLink("Listings", "List", "Listing", new { }, new { style = "color:#ddd ; margin: 1px 1px 1px 1px; padding: 3px 3px 3px 22px; border-radius: 4px;background: url('../Images/view-details-16.png') no-repeat; background-size: 20px; background-position-y: 4px; border: 1px rgba(0, 0, 0, 0.28) solid;" })</li>
                                <li>@Html.ActionLink("Ventures", "List", "Venture", new { }, new { style = "color:#ddd ; margin: 1px 1px 1px 1px; padding: 3px 3px 3px 22px; border-radius: 4px;background: url('../Images/adventures-16.png') no-repeat; background-size: 20px; background-position-y: 4px; border: 1px rgba(0, 0, 0, 0.28) solid;" })</li>
                                <li>@Html.ActionLink("Logout", "Login", "Account", new { }, new { style = "color:#ddd ; margin: 1px 1px 1px 1px; padding: 3px 3px 3px 22px; border-radius: 4px;background: url('../Images/logout-16.png') no-repeat; background-size: 20px; background-position-y: 4px; border: 1px rgba(0, 0, 0, 0.28) solid;" })</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("Register", "Register", "Account", new { }, new { style = "color: #ddd; margin: 1px 1px 1px 1px; padding: 5px 5px 5px 5px; border-radius: 4px;" })</li>
                            }
                            @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - PropertyShare</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
